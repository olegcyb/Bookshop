@using BookShop.Application;
@model BucketDisplay;
@{
    ViewData["Title"] = "GetBucketInfo";
}

@if (Model.Books.Count == 0)
{
    <h1>Your Bucket is Empty</h1>
}
else
{
    <h1>BucketInfo</h1>
    <table class="table table-hover">
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>
                    <h3>@book.Name</h3>
                </td>
                <td>
                    <h3>@book.Author</h3>
                </td>
                <td>
                    <h3 class="book_price" style="color:cadetblue">@book.Price</h3>
                </td>
                <td>
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("CancelBook", "User", new { id = book.Id })'">Cancel</button>
                </td>
            </tr>
        }
    </table>
    <h1>Total price:@Model.TotalPrice</h1>
    <form method="post" action="/User/CreateOrder">
        <div class="form-group">
            <label for="Address">Post Address</label>
            <input type="text" class="form-control" name="Address" placeholder="NovaPosta Adrress" required>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
}